---
interface Service {
  title: string;
  description: string;
  icon: string;
}

interface Props {
  services: Service[];
  featureKeywords: string[];
}

const { services, featureKeywords } = Astro.props;
---

<section id="services" class="py-32 bg-slate-50 relative overflow-hidden">
  <div class="container-custom relative z-10">
    <div class="max-w-2xl mb-20">
      <span class="text-[rgb(var(--color-primary))] font-bold tracking-wider uppercase text-sm mb-2 block">Hizmetlerimiz</span>
      <h2 class="text-4xl md:text-5xl font-heading font-bold text-slate-900 mb-6">
        Size Nasıl Değer Katabiliriz?
      </h2>
      <div class="h-1.5 w-24 bg-[rgb(var(--color-primary))] rounded-full"></div>
    </div>
    
    <div class="grid grid-cols-1 md:grid-cols-3 gap-8">
      {services.map((service, index) => {
        const keyword = featureKeywords[index % featureKeywords.length] || 'business';
        const seed = Math.floor(Math.random() * 1000) + index;
        
        // TRICK: "3d render icon" diyerek fotoğraf yerine şık obje istiyoruz.
        // Arka planı soft grey istiyoruz ki kartla uyumlu olsun.
        const imgUrl = `https://image.pollinations.ai/prompt/minimalist 3d render icon of ${encodeURIComponent(keyword)}, high quality, soft lighting, on light grey background?width=600&height=400&nologo=true&seed=${seed}&model=flux`;
        
        return (
          <div class="group bg-white rounded-3xl p-3 hover:shadow-2xl hover:shadow-[rgb(var(--color-primary))]/10 transition-all duration-500 border border-slate-100">
            <div class="relative h-56 rounded-2xl overflow-hidden mb-6 bg-slate-100 flex items-center justify-center">
               <img 
                src={imgUrl} 
                alt={service.title} 
                loading="lazy"
                class="w-full h-full object-cover transform group-hover:scale-110 transition-transform duration-700" 
               />
               <!-- İkon -->
               <div class="absolute top-4 left-4 bg-white/80 backdrop-blur-md border border-white/20 p-2 rounded-lg text-2xl shadow-sm">
                 {service.icon}
               </div>
            </div>
            
            <div class="px-4 pb-6">
              <h3 class="text-2xl font-heading font-bold mb-3 text-slate-900 group-hover:text-[rgb(var(--color-primary))] transition-colors">
                {service.title}
              </h3>
              <p class="text-slate-600 leading-relaxed mb-6 line-clamp-3">
                {service.description}
              </p>
              <a href="#contact" class="inline-flex items-center text-[rgb(var(--color-primary))] font-bold tracking-wide group/link text-sm">
                Detaylı Bilgi
                <svg class="w-4 h-4 ml-2 transform group-hover/link:translate-x-1 transition-transform" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M14 5l7 7m0 0l-7 7m7-7H3"></path></svg>
              </a>
            </div>
          </div>
        );
      })}
    </div>
  </div>
</section>